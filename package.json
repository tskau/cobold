    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fluent/bundle": "^0.18.0",
    "@fluent/langneg": "^0.7.0",
    "@mtcute/crypto-node": "^0.17.0",
    "@mtcute/dispatcher": "^0.17.2",
    "@mtcute/node": "^0.17.0",
    "@t3-oss/env-core": "^0.7.1",
    "better-sqlite3": "^11.5.0",
    "dotenv": "^16.3.1",
